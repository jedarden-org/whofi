# Test Configuration Defaults

# Unity Test Framework Configuration
CONFIG_UNITY_ENABLE_DOUBLE=y
CONFIG_UNITY_ENABLE_FLOAT=y
CONFIG_UNITY_ENABLE_INC_FLOAT=y
CONFIG_UNITY_ENABLE_64BIT=y

# Logging Configuration for Tests
CONFIG_LOG_DEFAULT_LEVEL_DEBUG=y
CONFIG_LOG_COLORS=y

# Memory Configuration for Tests
CONFIG_ESP32_SPIRAM_SUPPORT=y
CONFIG_SPIRAM_USE_CAPS_ALLOC=y
CONFIG_SPIRAM_IGNORE_NOTFOUND=y

# FreeRTOS Configuration for Tests
CONFIG_FREERTOS_HZ=1000
CONFIG_FREERTOS_WATCHPOINT_END_OF_STACK=y

# Disable Wi-Fi for unit tests (mock instead)
CONFIG_ESP32_WIFI_ENABLED=n

# Enable test-specific features
CONFIG_ESP_SYSTEM_ALLOW_RTC_FAST_MEM_AS_HEAP=y