# CSI Server Environment Configuration
# Copy this file to .env and modify the values

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=csi-server

# Network Configuration
CSI_NETWORK_SUBNET=172.20.0.0/16

# MQTT Broker Configuration
MQTT_USER=csi_user
MQTT_PASSWORD=change_this_password
MQTT_ADMIN_USER=admin
MQTT_ADMIN_PASSWORD=change_admin_password

# InfluxDB Configuration
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=change_influxdb_password
INFLUXDB_ORG=csi-org
INFLUXDB_BUCKET=csi_data
INFLUXDB_TOKEN=change_this_super_secret_token

# Redis Configuration
REDIS_PASSWORD=change_redis_password

# SSL Configuration
SSL_COUNTRY=US
SSL_STATE=State
SSL_CITY=City
SSL_ORGANIZATION=Your Organization
SSL_COMMON_NAME=localhost

# Positioning Configuration
CSI_MIN_NODES=3
CSI_UPDATE_RATE=1000
CSI_PATH_LOSS_EXPONENT=2.0
CSI_REFERENCE_RSSI=-30

# Performance Configuration
CSI_BUFFER_SIZE=100
POSITION_HISTORY_SIZE=50
WEBSOCKET_UPDATE_RATE=500

# Development Configuration
NODE_ENV=production
LOG_LEVEL=info